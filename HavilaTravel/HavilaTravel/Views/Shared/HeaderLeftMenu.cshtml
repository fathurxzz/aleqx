<div id="headerLeftMenu">
    @{
        var menuItems = (List<HavilaTravel.Models.Content>)ViewBag.HeaderLeftMenuItems;
    }
    <ul>
        @{if (menuItems != null)
          {
              foreach (var m in menuItems)
              {
            <li>&raquo; @Html.ActionLink(m.MenuTitle, "Index", "Home", new { id = m.Name }, null) @Html.ActionLink("edit", "Edit", "Content", new { Area = "Admin", id = m.Id }, new { @class = "adminLink" })</li>
            
              }
          }}
    </ul>
    @{
        if (Request.IsAuthenticated)
        {
        @Html.ActionLink("Add", "Add", "Content", new { Area = "Admin" }, new { @class = "adminLink" })
        }
    }
</div>

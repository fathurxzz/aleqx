@model HavilaTravel.Models.Banner



    <div class="smallBanner">
        <div class="header banner@{@Model.BannerType }">
        
        @if (Model.BannerType == 3)
        {
            <div class="hotTour"><span>Горящий тур</span>:</div>
        }
        else if (Model.BannerType == 2)
        {
            <div class="topicTour">Ближайший<br /><span>тематический тур</span>:</div>
        }
        
        
        
        </div>
        <div class="topTitle">@Html.ActionLink(Model.Title,"Index","Home",new{id=Model.ContentName},null)</div>
        <div class="picture">
            
            <div class="price price@{@Model.BannerType }">
                @Model.Price
            </div>

            <img src="../Content/Banners/@Model.ImageSource" alt="" />
        </div>
        <div class="bottomTitle">@Model.Title2</div>
    </div>


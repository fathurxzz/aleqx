@model HavilaTravel.Models.Article
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Редактирование новости</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div class="adminEditContentContainer">
        <table class="adminEditContentTable">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Date)
                </td>
                <td>
                    @Html.EditorFor(model => model.Date)
                    @Html.ValidationMessageFor(model => model.Date)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Title)
                </td>
                <td>@Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.TextAreaFor(model => model.Text, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Text)
                </td>
            </tr>
        </table>
    </div>

        

    <div class="buttonsContainer">
        <input type="submit" value="Сохранить" />
        @Html.ActionLink("Назад", "Index", "Articles", new { Area = "" }, null)
    </div>


}
@section Includes
{
    <script type="text/javascript" src="/Scripts/MicrosoftAjax.js"></script>
    <script type="text/javascript" src="/Scripts/MicrosoftMvcValidation.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}
@section RootLogoLink
{
    
        <a href="/" class="rootLink">
            <img src="../../../Content/img/pixel.gif" /></a>
   
}
@model HavilaTravel.Models.Banner
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Добавление баннера</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="adminEditContentContainer">
        <table class="adminEditContentTable">
            <tr>
                <td>
                    Тип баннера
                </td>
                <td>
                    @Html.DropDownList("BannerType", new List<SelectListItem> { new SelectListItem { Text = "Основной", Value = "1" }, new SelectListItem { Text = "Тематический тур", Value = "2" }, new SelectListItem { Text = "Горящий тур", Value = "3" } })
                </td>
            </tr>
            <tr>
                <td>
                    Файл
                </td>
                <td>
                    <input type="file" name="fileUpload" />
                </td>
            </tr>
            <tr>
                <td>
                    Цена
                </td>
                <td>@Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </td>
            </tr>
            <tr>
                <td>
                    Текст
                </td>
                <td>@Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td>
                    Нижний текст (для маленьких баннеров)
                </td>
                <td>@Html.EditorFor(model => model.Title2)
                    @Html.ValidationMessageFor(model => model.Title2)
                </td>
            </tr>
            <tr>
                <td>
                    Веб-имя страницы, на которую ссылается баннер
                </td>
                <td>@Html.EditorFor(model => model.ContentName)
                    @Html.ValidationMessageFor(model => model.ContentName)
                </td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Загрузить" />
            @Html.ActionLink("Назад", "Index", "Banner", new { Area = "Admin" }, null)
        </div>
    </div>
    
   
}
@section RootLogoLink
{
    
        <a href="/" class="rootLink">
            <img src="../../../Content/img/pixel.gif" /></a>
   
}
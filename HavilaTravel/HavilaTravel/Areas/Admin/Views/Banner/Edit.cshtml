@model HavilaTravel.Models.Banner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=>model.Id)
   <div class="adminEditContentContainer">
        <table class="adminEditContentTable">
            <tr>
                <td>
                    Тип баннера
                </td>
                <td>
                
                    *основной баннер должен быть размером 635 х 260 px<br/>
                    @Html.DropDownList("BannerType", new List<SelectListItem> { new SelectListItem { Text = "Основной", Value = "1" }, new SelectListItem { Text = "Тематический тур", Value = "2" }, new SelectListItem { Text = "Горящий тур", Value = "3" } })
                </td>
            </tr>
            <tr>
                <td>
                    Файл
                </td>
                <td>
                    <input type="file" name="fileUpload" />
                </td>
            </tr>
            <tr>
                <td>
                    Цена
                </td>
                <td>@Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </td>
            </tr>
            <tr>
                <td>
                    Текст
                </td>
                <td>@Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Загрузить" />
            <a href="#" onclick="javascript:history.back();">Отмена</a>
        </div>
    </div>
}

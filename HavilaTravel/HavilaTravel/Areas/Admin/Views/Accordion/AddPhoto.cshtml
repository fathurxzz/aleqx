@model HavilaTravel.Models.AccordionImage
@{
    ViewBag.Title = "AddPhoto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    AddPhoto</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("AddPhoto", "Accordion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.Hidden("parentId")

    <div class="adminEditContentContainer">
    <table>
        <tr>
            <td>
                Файл
            </td>
            <td>
                Заголовок
            </td>
            <td>
                Порядок отображения
            </td>
        </tr>
        <tr>
            <td>
                <input type="file" name="fileUpload[0]" />
            </td>
            <td>
                <input type="text" name="fileTitles[0]" class="photoTotleInput"  />
            </td>
            <td>
                <input type="text" name="sortOrder[0]" class="sortOrderInput" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="file" name="fileUpload[1]" />
            </td>
            <td>
                <input type="text" name="fileTitles[1]" class="photoTotleInput"  />
            </td>
            <td>
                <input type="text" name="sortOrder[1]"  class="sortOrderInput" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="file" name="fileUpload[2]" />
            </td>
            <td>
                <input type="text" name="fileTitles[2]" class="photoTotleInput"  />
            </td>
            <td>
                <input type="text" name="sortOrder[2]"  class="sortOrderInput" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="file" name="fileUpload[3]" />
            </td>
            <td>
                <input type="text" name="fileTitles[3]" class="photoTotleInput"  />
            </td>
            <td>
                <input type="text" name="sortOrder[3]"  class="sortOrderInput" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="file" name="fileUpload[4]" />
            </td>
            <td>
                <input type="text" name="fileTitles[4]" class="photoTotleInput" />
            </td>
            <td>
                <input type="text" name="sortOrder[4]" class="sortOrderInput"  />
            </td>
        </tr>
    </table>
    <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            <a href="#" onclick="javascript:history.back();">Отмена</a>
        </div>
     </div>
}
@model HavilaTravel.Models.Bellboy

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Bellboy", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="adminEditContentContainer">
    <table class="adminEditContentTable">
    <tr>
        <td>Текст верхней ссылки</td>
        <td>@Html.EditorFor(model => model.TopText)
            @Html.ValidationMessageFor(model => model.TopText)</td>
    </tr>
    <tr>
        <td>Адрес верхней ссылки</td>
        <td>@Html.EditorFor(model => model.TopLink)
            @Html.ValidationMessageFor(model => model.TopLink)</td>
    </tr>
    <tr>
        <td>Текст нижней ссылки</td>
        <td> @Html.EditorFor(model => model.BottomText)
            @Html.ValidationMessageFor(model => model.BottomText)</td>
    </tr>
    <tr>
        <td>Адрес нижней ссылки</td>
        <td>@Html.EditorFor(model => model.BottomLink)
            @Html.ValidationMessageFor(model => model.BottomLink)</td>
    </tr>
    <tr>
        <td>Изображение</td>
        <td><input type="file" name="fileUpload" /></td>
    </tr>
    </table>
        <div class="buttonsContainer">
            <input type="submit" value="Загрузить" />
            @Html.ActionLink("Назад", "Index", "Bellboy", new { Area = "Admin" }, null)
        </div>
    
    </div>
}

@section RootLogoLink
{
    
        <a href="/" class="rootLink">
            <img src="../../../Content/img/pixel.gif" /></a>
   
}
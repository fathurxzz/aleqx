@using Ego
@using SiteExtensions.Graphics
@model Ego.Models.OrderModel
@{
    ViewBag.Title = "Информация о заказе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section MainMenu
{
    @Html.Partial("MainMenu", Model.Menu)
}
<h2>
    Информация о заказе</h2>
    
    
<div>
    @Html.ActionLink("Все заказы","Index","Order",new{area="Admin"},null)
</div>
<table>
    <tr>
        <td>
            Дата
        </td>
        <td>@Model.Order.Date
        </td>
    </tr>
    <tr>
        <td>
            Имя
        </td>
        <td>@Model.Order.Name
        </td>
    </tr>
    <tr>
        <td>
            Телефон
        </td>
        <td>@Model.Order.Phone
        </td>
    </tr>
    <tr>
        <td>
            Электропочта
        </td>
        <td>@Model.Order.Email
        </td>
    </tr>
    <tr>
        <td>
            Размер
        </td>
        <td>@Model.Order.Size
        </td>
    </tr>
    <tr>
        <td>
            Дополнительные комментарии
        </td>
        <td>@Model.Order.Description
        </td>
    </tr>
</table>
<div class="display-field">
    @Html.Raw(Html.CachedImage("~/Content/Images/", @Model.Order.ProductImageSource, SiteSettings.GetThumbnail("product")))
</div>

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta property="og:title" content="Zaborovskiy" />
    <meta property="og:image" content="http://zaborovskiy.com.ua/Content/img/preview.jpg" />
    <meta property="og:url" content="http://zaborovskiy.com.ua/" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Gallery.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/fonts/fonts.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ScrollBox.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/SearchSelector.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tinyscrollbar.min.js")" type="text/javascript"></script>
    @if (Request.IsAuthenticated)
    {
        <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    }
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    @RenderSection("Includes", false)
    <script type="text/javascript">
        $(function () {
            $(".fancy").fancybox({ showCloseButton: false, padding: 0, margin: 0 });
            $(".fancyImage").fancybox({ showCloseButton: true, cyclic: true, showNavArrows: true, padding: 0, margin: 0, centerOnScroll: true });

            var oScrollbar = $('#scrollbar1');

            oScrollbar.tinyscrollbar({ axis: 'x', sizethumb: 26 });

            window.setTimeout(function () {
                oScrollbar.tinyscrollbar_update();
            }, 5000);
        });
    </script>
</head>
<body>
    <div class="page">
    @if (Request.IsAuthenticated)
        {
            <div class="logOutLink">
                @Html.ActionLink("Выйти из системы администрирования", "LogOff", "Account", new { Area = "" }, new { @class = "adminLink" })
            </div>
        }
        @RenderSection("MainMenu", false)
        @*<div class="boardContainer">*@ @* <div class="board">
            </div>*@ @*@RenderSection("CategoryTitle", false)*@ @* </div>*@
        @RenderSection("GalleryContent", false)
        @RenderBody()
    </div>
    <div class="footerContainer">
        <div class="footer">
            <div class="top">
            @RenderSection("CatalogueFilter",false)
           
            </div>
            <div class="bottom">
                <div class="inner">
                    <div class="copy">
                        Сделано в<br />
                        <a href="http://eugene-miller.com">Студии Евгения Миллера</a>
                    </div>
                    <div class="footerLinks">
                        @if(Request.IsAuthenticated)
                        {
                            @Html.ActionLink("редактировать","Edit","Content",new{Area="Admin",id=1},new{@class="adminLink",style="position:absolute; margin:25px 0 0 55px"})
                        }
                        
                        @Html.ActionLink("новости","Articles","Home",null,new{@class="fancy"})
                        @Html.ActionLink("об авторе","About","Home",null,new{@class="fancy"})
                        @Html.ActionLink("обратная связь", "FeedbackForm", "Home", null, new { @class = "fancy" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

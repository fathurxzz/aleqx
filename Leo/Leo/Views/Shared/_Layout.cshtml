<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Gallery.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox.css")" rel="stylesheet" type="text/css" />
    @if (Request.IsAuthenticated)
    {
        <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    }
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    @RenderSection("Includes", false)
    <script type="text/javascript">
        $(function () {
            //            $(".fancy").fancybox({ showCloseButton: false, padding: 0, margin: 0 });
            $(".fancyImage").fancybox({ showCloseButton: true, cyclic: true, showNavArrows: true, padding: 0, margin: 0, centerOnScroll: true });
        });
    </script>
</head>
<body>
    <div class="page">
        @RenderSection("MainMenu", false)
        @*<div class="boardContainer">*@ @* <div class="board">
            </div>*@ @*@RenderSection("CategoryTitle", false)*@ @* </div>*@
        @RenderSection("GalleryContent", false)
        @RenderBody()
    </div>
    <div class="footerContainer">
        <div class="footer">
            <div class="top">
            </div>
            <div class="bottom">
                <div class="inner">
                    <div class="copy">
                        Сделано в<br />
                        <a href="http://eugene-miller.com">Студии Евгения Миллера</a>
                    </div>
                    <div class="footerLinks">
                        <a href="#">об авторе</a> <a href="#">обратная связь</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@using Leo.Helpers
@model Leo.Models.ProductAttribute
<div class="attribute">
    @{

        bool selected = false;
        if (WebSession.Categories.ContainsKey((int)ViewBag.CategoryId))
        {
            selected = WebSession.Categories[(int) ViewBag.CategoryId].Any(attr => attr.Id == Model.Id);
        }
    }

    @Html.CheckBox("attr_" + Model.Id, selected)<br/> @Html.Raw(Model.Title)
</div>

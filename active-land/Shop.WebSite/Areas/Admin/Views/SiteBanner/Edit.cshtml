@model Shop.DataAccess.Entities.MainPageBanner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "SiteBanners")
}

<div class="container">
    <h3>Добавление изображений</h3>
    @using (Html.BeginForm("Edit", "SiteBanner", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

                <div class="form-group">
            @Html.LabelFor(model => model.Url, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Url" id="Url" placeholder="Введите адрес страницы" value="@Model.Url">
                
            </div>
            @Html.ValidationMessageFor(model => model.Url)
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">Изображения</label>
            <div class="col-sm-10">
                <input type="file" id="files" name="files" />
            </div>
        </div>
        
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "SiteBanner", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model Shop.DataAccess.Entities.ProductStock

@{
    ViewBag.Title = "Создание артикула";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu","Product")
}
<div class="container">
    <h3>Создание артикула</h3>
    @using (Html.BeginForm("Create", "ProductStock", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.ProductId)
   
        <div class="form-group">
            @Html.LabelFor(model => model.StockNumber, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="StockNumber" id="StockNumber" placeholder="Введите артикул" value="@Model.StockNumber">
            </div>
            @Html.ValidationMessageFor(model => model.StockNumber)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Size, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Size" id="Size" placeholder="Введите размер рамы" value="@Model.Size">
            </div>
            @Html.ValidationMessageFor(model => model.Size)
        </div>
        
           
        <div class="form-group">
            @Html.LabelFor(model => model.Color, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Color" id="Color" placeholder="Введите цвет" value="@Model.Color">
            </div>
            @Html.ValidationMessageFor(model => model.Color)
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model=>model.IsAvailable) @Html.LabelFor(model => model.IsAvailable)
                    </label>
                </div>
            </div>
        </div>
     
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "ProductStock", new{id=Model.ProductId}, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
   
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

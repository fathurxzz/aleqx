            @Html.DisplayFor(modelItem => item.Info)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subscribed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryMethod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryStreet)

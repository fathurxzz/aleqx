@model Shop.DataAccess.Entities.ShopSetting

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "ShopSettings")
}


<div class="container">
    <h3>Редактирование товарв</h3>
    @using (Html.BeginForm("Edit", "ShopSetting", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Model.Title
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Value, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Value" id="Value" placeholder="Введите значение" value="@Model.Value">
            </div>
            @Html.ValidationMessageFor(model => model.Value)
        </div>
   
    
        
        
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "ShopSetting", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>



@model Kulumu.Models.ProductSize
@{
    ViewBag.Title = "ProductSize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    ProductSize</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="adminContentContainer">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
 
        @Html.Hidden("categoryId", (int)ViewBag.categoryId)

        <table class="adminEditContentTable">
            <tr>
                <td colspan="2">
                    <h2>
                        Редактирование категории</h2>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Size)
                </td>
                <td>@Html.EditorFor(model => model.Size)
                    @Html.ValidationMessageFor(model => model.Size)
                </td>
            </tr>
        </table>
        
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Назад", "Gallery", "Home", new { area = "", id = ViewBag.categoryName }, null)
        </div>
    }
</div>

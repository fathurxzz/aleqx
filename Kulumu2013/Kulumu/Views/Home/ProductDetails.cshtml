@using Kulumu.Models
@model GalleryModel
@section About
{
    @Html.Partial("_About", new AboutModel { Title = Model.Category.BottomDescriptionTitle, Text = Model.Category.BottomDescription })
}

<div class="gallery">
    <div class="categories">
       @Html.Partial("_CategoriesMenu", Model.Categories)
    </div>
    <div class="title">
        @Html.Partial("_BigTitleLink", Model.ParentCategory)
    </div>
    <div class="categories">
        @Html.Partial("_SubCategoriesMenu", new SubCategoriesMenu { Categories = Model.Categories, ParentCategoryId = Model.ParentCategory.Id ,SelectedAsLink = true})
    </div>
    
    <div class="productDetails">
        @Html.Partial("_Product", Model.Product)
    </div>
</div>

@section Includes
{
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Catalogue.js")" type="text/javascript"></script>
    <script type="text/javascript">
        ProjectCatalogue.initialize();

        $(function() {
            ProjectCatalogue.setFirstImage();
        });
    </script>
}

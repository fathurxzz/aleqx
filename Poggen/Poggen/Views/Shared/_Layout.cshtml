<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div class="header">
            <div id="logo">
            </div>
            @Html.Partial("MainMenu")
            @Html.Partial("CategorySelector")
        </div>
        @RenderBody()
    </div>
    <div class="footerContainer">
        <div class="footer">
            <div class="copy">
                &copy; @DateTime.Now.Year Poggenpohl
            </div>
            <div class="emLink">
                Создание сайта &mdash; <a href="http://eugene-miller.com">Студия Евгения Миллера</a>
            </div>
        </div>
    </div>
</body>
</html>

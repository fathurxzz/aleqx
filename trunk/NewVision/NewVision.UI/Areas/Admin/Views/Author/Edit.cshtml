@using System.Collections
@using NewVision.UI.Helpers
@model NewVision.UI.Models.Author

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "Authors")
}

<div class="container">
    <h3>Добавление новости</h3>
    @using (Html.BeginForm("Edit", "Author", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Name" placeholder="Введите идентификатор" value="@Model.Name">
            </div>
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Title" placeholder="Введите заголовок" value="@Model.Title">
            </div>
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TitleEn, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="TitleEn" placeholder="Введите заголовок" value="@Model.TitleEn">
            </div>
            @Html.ValidationMessageFor(model => model.TitleEn)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TitleUa, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="TitleUa"  placeholder="Введите заголовок" value="@Model.TitleUa">
            </div>
            @Html.ValidationMessageFor(model => model.TitleUa)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="10" name="Description">@Model.Description</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionEn, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="10" name="DescriptionEn">@Model.DescriptionEn</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionUa, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="10" name="DescriptionUa">@Model.DescriptionUa</textarea>
            </div>
        </div>
         <div class="form-group">
            @Html.LabelFor(model => model.About, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="10" name="About">@Model.About</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AboutEn, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="10" name="AboutEn">@Model.AboutEn</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AboutUa, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="10" name="AboutUa">@Model.AboutUa</textarea>
            </div>
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.Photo, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="file" name="photo"/>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Avatar, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="file" name="avatar"/>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SortOrder, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="SortOrder" placeholder="Введите порядок отображения" value="@Model.SortOrder">
            </div>
            @Html.ValidationMessageFor(model => model.SortOrder)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Tags, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
            @foreach (var tag in ((IEnumerable<NewVision.UI.Models.Tag>)ViewBag.Tags))
            {
                @Html.CheckBox("tag_" + tag.Id, Model.Tags.Contains(tag))
                @tag.Title
                @Html.Raw("&nbsp;&nbsp;&nbsp;")
            }    
            </div>
            
        </div>
        
        
        
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "Author", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}

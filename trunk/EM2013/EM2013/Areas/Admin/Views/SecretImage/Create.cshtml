@model EM2013.Models.SecretImage
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="adminContentContainer">
    @using (Html.BeginForm("Create", "SecretImage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)

        <table class="adminEditContentTable secretLink">
            <tr>
                <td colspan="2">
                    <h2>
                        Картинки к секретной ссылке</h2>
                </td>
            </tr>
            <tr>
                <td>
                    Превьюшка
                </td>
                <td>
                    Основное изображение
                </td>
            </tr>
            <tr>
                <td><input type="file" name="previewImage[0]" /></td>
                <td><input type="file" name="mainImage[0]" /></td>
            </tr>
            <tr>
                <td><input type="file" name="previewImage[1]" /></td>
                <td><input type="file" name="mainImage[1]" /></td>
            </tr>
            <tr>
                <td><input type="file" name="previewImage[2]" /></td>
                <td><input type="file" name="mainImage[2]" /></td>
            </tr>
            <tr>
                <td><input type="file" name="previewImage[3]" /></td>
                <td><input type="file" name="mainImage[3]" /></td>
            </tr>
            <tr>
                <td><input type="file" name="previewImage[4]" /></td>
                <td><input type="file" name="mainImage[4]" /></td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Назад", "Index", "Home", new { Area = "", category = ViewBag.CategoryName }, null)
        </div>
    }
</div>

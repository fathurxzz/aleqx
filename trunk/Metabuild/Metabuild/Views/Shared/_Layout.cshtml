<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PageScripts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox.css")" rel="stylesheet" type="text/css" />
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    <script type="text/javascript">
        var isHomePage  =  @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");
        var showSubMenu = @(ViewBag.showSubMenu != null ? (ViewBag.showSubMenu).ToString().ToLowerInvariant() : "false");
        
        BasePageExtender.initialize();
        
        
        
                $(function () {
            $(".fancy").fancybox({ showCloseButton: true, cyclic: true, showNavArrows: true, padding: 0, margin: 0, centerOnScroll: true });
            });
        
    </script>
    @RenderSection("Includes", false)
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div style="position: absolute; top: 10px; left: 20px;">
            @Html.ActionLink("Выйти из системы администрирования", "LogOff", "Account", new { Area = "" }, new { @class = "adminLink" })
        </div>
    }
    <div class="page">
        <div id="header">
            <div id="logo">
            </div>
            <div id="mainMenu">
                @Html.Partial("MainMenu")
            </div>
            <div id="contacts">
                +38 (067) 443-55-30
                <br />
                sobaka@mail.ru
            </div>
        </div>
        @Html.Partial("SubMenu")
        <div id="main">
            <div class="contentContainer">
                <div class="contentContainerTop">
                </div>
                <div class="contentContainerMiddle">
                    <div class="content">
                        @RenderSection("Title", false)
                        @RenderBody()
                        <div class="bottomLine"></div>
                    </div>
                </div>
                <div class="contentContainerBottom">
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
        <div style="height: 230px;">
        </div>
        <div id="footerLine">
            <div class="copy">
                &copy; 2012 компания "MetalBuild"
            </div>
            <div class="miller">
                Сайт сделан в <a href="http://eugene-miller.com">Студии Евгения Миллера</a>
            </div>
        </div>
    </div>
</body>
</html>

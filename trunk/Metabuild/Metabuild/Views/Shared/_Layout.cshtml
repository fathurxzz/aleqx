<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="logo">
            </div>
            <div id="mainMenu">
                @RenderSection("MainMenu", false)
            </div>
            <div id="contacts">
                +38 (067) 443-55-30
                <br />
                sobaka@mail.ru
            </div>
        </div>
        <div id="main">
            <div class="contentContainer">
                <div class="contentContainerTop">
                </div>
                <div class="contentContainerMiddle">
                    <div class="content">
                        @RenderSection("Title", false)
                        @RenderBody()
                    </div>
                </div>
                <div class="contentContainerBottom">
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
        <div style="height: 230px;">
        </div>
        <div id="footerLine">
            <div class="copy">
                &copy; 2012 компания "MetalBuild"
            </div>
            <div class="miller">
                Сайт сделан в <a href="http://eugene-miller.com">Студии Евгения Миллера</a>
            </div>
        </div>
    </div>
</body>
</html>

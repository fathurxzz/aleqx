@model Kulumu.Models.LogOnModel
@{
    ViewBag.Title = "Вход в систему администрирования";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Не удалось войти в систему администрирования")
@using (Html.BeginForm())
{
    <div class="logOnPanel">
        <h2>
            Вход в систему администрирования</h2>
        <div style="margin-top: 10px;">
            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field" style="margin-bottom: 10px;">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field" style="margin-bottom: 10px;">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label" style="margin-bottom: 10px;">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <p style="margin-bottom: 20px;">
                <input type="submit" value="Войти" />
            </p>
        </div>
    </div>
}

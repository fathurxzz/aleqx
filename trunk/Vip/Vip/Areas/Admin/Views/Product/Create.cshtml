@using Vip.Models
@model Vip.Models.Product
@{
    ViewBag.Title = "Добавление изображения";
    Layout = "~/Views/Shared/_Layout.cshtml";


    var brands = (IEnumerable<SelectListItem>)ViewBag.Brands;
    var makers = (IEnumerable<SelectListItem>)ViewBag.Makers;
    var layouts = (IEnumerable<Layout>) ViewBag.Layouts;
    var attributes = (IEnumerable<ProductAttribute>) ViewBag.Attributes;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="adminContentContainer">
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.Hidden("categoryId", Model.Category.Id)
        <table class="adminEditContentTable">
            <tr>
                <td colspan="2">
                    <h2>
                        Добавление изображения для категории "@Model.Category.Title"</h2>
                </td>
            </tr>
            <tr>
                <td>
                    Категории
                </td>
                <td>
                    @foreach (var item in layouts.Where(l => l.Parent == null))
                    {
                        <div class="parent">
                            @item.Title
                            @foreach(var child in item.Children)
                            {
                                <div class="child">
                                    @Html.CheckBox("lyt_" + child.Id) @child.Title
                                </div>
                            }
                        </div>
                    }
                </td>
            </tr>
            <tr>
                <td>Аттрибуты раздела</td>
                <td>
                    @foreach(var item in attributes)
                    {
                        <div>
                            @Html.CheckBox("attr_" + item.Id) @item.Title
                        </div>
                    }
                </td>
            </tr>
            <tr>
                <td>
                    Бренд
                </td>
                <td>
                    @Html.DropDownList("brandId", brands)
                </td>
            </tr>
            <tr>
                <td>
                    Страна производитель
                </td>
                <td>
                    @Html.DropDownList("makerId", makers)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Title)
                </td>
                <td>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.ImageSource)
                </td>
                <td>
                    <input type="file" name="fileUpload" />
                    @Html.ValidationMessageFor(model => model.ImageSource)
                </td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Назад", "Index", "Catalogue", new { Area = "", category = Model.Category.Name }, null)
        </div>
    }
</div>

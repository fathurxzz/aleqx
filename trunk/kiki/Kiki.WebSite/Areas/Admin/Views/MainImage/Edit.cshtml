        </div>*@
         <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control " rows="3" name="Text">@Model.Text</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TextEng, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control " rows="3" name="TextEng">@Model.TextEng</textarea>
            </div>
        </div>
        
          <div class="form-group">
            @Html.LabelFor(model => model.Text2, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control " rows="3" name="Text2">@Model.Text2</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Text2Eng, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control " rows="3" name="Text2Eng">@Model.Text2Eng</textarea>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">Изображения</label>
            <div class="col-sm-10">
                @Html.Partial("InputImages")
            </div>
        </div>
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "MainImage", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>

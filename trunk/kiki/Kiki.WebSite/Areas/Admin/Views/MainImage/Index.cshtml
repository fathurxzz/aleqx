@using Kiki.WebSite
@using Kiki.WebSite.Helpers.Graphics
@model IEnumerable<Kiki.DataAccess.Entities.SiteImage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "MainImage")
}

<p>
    @*<button type="button" class="btn btn-success btn-sm">*@
        @Html.ActionLink("Добавить", "Create")
    @*</button>*@
</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageSource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TextEng)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text2Eng)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(Html.CachedImage("~/Content/Images/", item.ImageSource, SiteSettings.GetThumbnail("articleAdminPreview")))
            </td>
            <td>
                <div>
                    @Html.Raw(item.Text)
                </div>
            </td>
            <td>
                <div>
                    @Html.Raw(item.TextEng)
                </div>
            </td>
            <td>
                <div>
                    @Html.Raw(item.Text2)
                </div>
            </td>
            <td>
                <div>
                    @Html.Raw(item.Text2Eng)
                </div>
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { onclick = "return confirm('Удалить изображение?')" })
            </td>
        </tr>
    }

</table>

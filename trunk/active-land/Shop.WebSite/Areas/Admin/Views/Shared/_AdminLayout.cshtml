<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Active Land &mdash; Система администрирования &mdash; @ViewBag.Title</title>
    @Styles.Render("~/Content/Admin.css", "~/Content/bootstrap.min.css","~/Content/bootstrap-select.min.css" ,"~/Content/jquery-ui.min.css" ,"~/Content/jquery-ui.structure.min.css")
</head>
    <body>
        @Html.Partial("LanguageSwitcher") 

        @RenderSection("AdminNavigation",false)
        
        
        @if (TempData["errorMessage"] != null)
        {
                <div style="text-align: center">
                <h4><span class="label label-danger"> @TempData["errorMessage"]</span>    </h4>
                </div>
            }

        @RenderBody()
    
        @Scripts.Render("~/bundles/jquery")
        
        @Scripts.Render("~/Scripts/bootstrap.min.js","~/Scripts/bootstrap-select.js")

        @RenderSection("scripts", required: false)
        
        <script type="text/javascript">
            $(function () {
                $('.selectpicker').selectpicker();
            })
    </script>

    </body>
</html>

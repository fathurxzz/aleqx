@model Shop.DataAccess.Entities.ArticleItem

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "Article")
}


<div class="container">
    <h3>Добавление блока</h3>
    @using (Html.BeginForm("Create", "ArticleItem", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ArticleId)
        @Html.HiddenFor(model => model.ArticleId)
        @Html.HiddenFor(model => model.CurrentLang)
   
        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control" rows="3" name="Text">@Model.Text</textarea>
            </div>
        </div>
       
        <div class="form-group">
            @Html.ActionLink("Назад", "Details", "Article", new{id=Model.ArticleId}, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model Shop.WebSite.Models.MainPageInfo
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "MainPageInfo")
}


<div class="container">
    <h3>Информация главной страницы</h3>
    @using (Html.BeginForm("Edit", "MainPageInfo", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            <label class="col-sm-2 control-label">Аватар</label>
            <div class="col-sm-10">
                
                <input type="file" name="fileUpload" id="fileUpload">
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">Текст</label>
            
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="3" name="AuthorGreetingText">@Model.AuthorGreetingText</textarea>
            </div>
        </div>
    
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "MainPageInfo", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}

<!DOCTYPE html>
<html>
<head>
    <title>Вай-Фай-пасс!</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <meta property="og:title" content="Вай-фай-пасс: пароли местных вай-фай-точек"/>
    <meta property="og:url" content="http://wi-fi-pass.kiev.ua/" />
    
    <script type="text/javascript">
        $(function () {
            $(".fancy").fancybox({ showCloseButton: false, padding: 0, margin: 0 });
        });
    </script>
</head>
<body>
    <div id="page">
        <div class="header">
            
            @if (Request.IsAuthenticated)
            {
                <div class="adminLinkContainer">
                @Html.ActionLink("Выйти из системы администрирования", "LogOff", "Account", null, new { @class = "adminLink" })
                @Html.Raw("&nbsp;")
                @Html.ActionLink("Редактировать карту","Edit","Home", null, new { @class = "adminLink" })
                </div>
            }
            
            <div class="sendnewpass">
                @Html.ActionLink("Сообщить новый пароль", "FeedbackForm", "Home", null, new { @class = "fancy" })
            </div>

        </div>
        
        <div class="map">
            <div class="inner">
                @RenderBody()    
            </div>
        </div>
        
        <div class="footer">
            Идея <a href="http://eugene-miller.com">Студии Евгения Миллера</a><br/>
            Пользуйтесь на здоровье :)
        </div>

        
    </div>
</body>
</html>

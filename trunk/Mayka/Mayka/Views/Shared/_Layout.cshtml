<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico?v=1.1" type="image/x-icon"> 
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/Fonts.css", "~/Content/Site.css", "~/Content/Errors.css", "~/Content/Menu.css","~/Content/jquery.bxslider.css")
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />
    

    @RenderSection("Styles", false)
    @if (Request.IsAuthenticated)
    { 
        @Styles.Render("~/Content/Admin.css")
    }
    <script type="text/javascript">

        var isHomePage = @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");

        
    </script>
</head>
<body>
    <div id="page">
        <div id="left-block">
            <div id="logo">
            </div>
            
            @RenderSection("Menu",false)

            

            <div class="social-line">
                <div class="text">мы антисоциальны:</div>
            </div>
            <div class="social-icons">
                <a href="http://instagram.com/derzkie_futbolki" class="instagram"></a>
                <a href="http://www.facebook.com/derzkie.futbolki" class="facebook"></a>
                <div class="clear"></div>
            </div>

            <div class="social-line">
            </div>

            <div class="copyright">
                Сделано с гордостью<br/> и примесью лёгкой эйфории<br/> в <a href="http://eugene-miller.com">Студии Евгения Миллера</a>
            </div>
        </div>
        <div id="main-content-container">
            @RenderBody()
        </div>
        <div class="clear"></div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    
    @Scripts.Render("~/Scripts/jquery.bxslider.min.js")
    @Scripts.Render("~/Scripts/jquery.inputmask-2.3.51.min.js")
    @Scripts.Render("~/Content/fancybox/jquery.fancybox-1.3.4.js")
    @Scripts.Render("~/Scripts/site.js")

    @*@Scripts.Render("~/bundles/sitescripts")*@

    @RenderSection("scripts", required: false)
</body>
</html>

@model List<Mayka.Helpers.MenuItem>
@if (Request.IsAuthenticated)
{
    @Html.ActionLink("Выйти из админки","Logout","Auth",new{area=""},new{@class="adminLink"})
}
<ul id="menu">
    @foreach (var item in Model.OrderBy(m=>m.SortOrder))
    {
        @Html.Partial("_MenuItem", item)
    }
    
    @if (Request.IsAuthenticated)
    {
        @Html.ActionLink("Добавить", "Create", "Content", new { area = "Admin"}, new { @class = "adminLink" })
    }

</ul>

@using FashionIntention.UI.Helpers
@model FashionIntention.UI.Models.MainBanner

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "MainBanner")
}


<div class="container">
    <h3>Добавление новости</h3>
    @using (Html.BeginForm("Edit", "MainBanner", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.Id)
      <div class="form-group">
            @Html.LabelFor(model => model.Url, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Url" id="Url" placeholder="Введите адрес ссылки" value="@Model.Url">
            </div>
            @Html.ValidationMessageFor(model => model.Url)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ImageSrc, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="file" name="file" />
            </div>
        </div>
     
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "MainBanner", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}

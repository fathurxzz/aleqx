@model IEnumerable<Shop.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>
    Категории</h2>
<p>
    @Html.ActionLink("Добавить категорию", "Create")
</p>
<table>
    <tr>
        <th>
            Название
        </th>
        <th>
        </th>
        <th>
            Идентификатор
        </th>
        <th>
            Описание<br />
            (для поисковиков)
        </th>
        <th>
            Ключевые слова<br />
            (для поисковиков)
        </th>
        <th>
            Порядок отображения
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model.OrderBy(c => c.SortOrder))
    {
        @Html.Partial("Category", item)
    }
</table>

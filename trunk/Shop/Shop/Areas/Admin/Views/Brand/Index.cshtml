@using Shop.Helpers
@model IEnumerable<Shop.Models.Brand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>
    Бренды</h2>
<p>
    @Html.ActionLink("Добавить новую запись", "Create")
</p>
<table>
    <tr>
        <th>
            Идентификатор
        </th>
        <th>
            Название
        </th>
        <th>
            Логотип
        </th>
        <th>
            Описание
        </th>
        <th>
            Описание<br />
            (для поисковиков)
        </th>
        <th>
            Ключевые слова<br />
            (для поисковиков)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model.OrderBy(b => b.Name))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @{
           if (!string.IsNullOrEmpty(item.Logo))
           {
                    @Html.Raw(Html.CachedImage("~/Content/Images/", item.Logo, "thumbnail0", item.Logo))
           }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeoDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeoKeywords)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Просмотр", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { onclick = "return confirm('Удалить бренд?')" })
            </td>
        </tr>
    }
</table>

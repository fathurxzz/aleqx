@model Leo.Models.Content
@{
    ViewBag.Title = "Редактирование страницы контента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style type="text/css" >
    .logOutLink {
        position: static !important;
    }
</style>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div>
    <table class="adminEditContentTable">
        <tr>
            <td colspan="2">
                <h2>
                    Редактирование страницы контента</h2>
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Title)
            </td>
            <td>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                Текст
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @Html.TextAreaFor(model => model.Text, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.Text)
            </td>
        </tr>
    </table>
    <div class="buttonsContainer">
        <input type="submit" value="Сохранить" />
        @Html.ActionLink("Назад", "Index", "Catalogue", new { Area = "", id = "" }, null)
    </div>    
    </div>
    }
@section Includes
{
    <script type="text/javascript" src="/Scripts/MicrosoftAjax.js"></script>
    <script type="text/javascript" src="/Scripts/MicrosoftMvcValidation.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}

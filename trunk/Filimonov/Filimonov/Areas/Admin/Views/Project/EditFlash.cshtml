@model Filimonov.Models.FlashContent
@{
    ViewBag.Title = "Редактирование флеша";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
    .thumb
    {
        height: 75px;
        border: 1px solid #000;
        margin: 10px 5px 0 0;
    }
</style>
<div class="adminContentContainer">
    <div style="width: 750px; margin: 0 auto">
        
        @if (!string.IsNullOrEmpty(ViewBag.Errormessage))
        {
            <div style="color: red">
                @ViewBag.Errormessage
            </div>
        }
        

        @using (Html.BeginForm("EditFlash", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            @Html.Hidden("projectId")
            <table class="adminEditContentTable">
                <tr>
                    <td>@Html.LabelFor(model => model.ImageSourcePreview)
                    </td>
                    <td>
                        @*<input type="file" name="fileUpload" class="photoFileInput" />*@
                        <input type="file" id="fileUploadPreview" name="fileUploadPreview"  />
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Title)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Title)
                        @Html.ValidationMessageFor(model => model.Title)
                    </td>
                </tr>
            </table>
            <div class="buttonsContainer">
                <input type="submit" value="Закачать" />
                @Html.ActionLink("Назад", "Projects", "Home", new { Area = "", id = ViewBag.projectName }, null)
            </div>
        }
    </div>
</div>

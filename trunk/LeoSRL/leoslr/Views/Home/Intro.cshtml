@using Leo
@model Leo.Models.CategoryModel

@{
    ViewBag.Title = "Intro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Includes
{
    <link href="@Url.Content("~/Content/intro.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
}

<div class="page">
    <div class="intro-container">
        <div class="intro-content">
            @foreach (var category in Model.Categories.OrderBy(c => c.SortOrder))
            {
                <a href="#" class="block" id="@category.Name">
                    <div>
                        @category.Title
                    </div>
                </a>
            }
        </div>
    </div>
    <div class="imagine">
        Представьте себе<br>
        надежного партнера
        <div class="imaginelogo">
        </div>
    </div>
    <div class="hand-container">
        <div class="hand-wrapper">
            <div class="hand">
            </div>
        </div>
    </div>

</div>
<div id="hiddencontent">
    @foreach (var item in Model.SpecialContents)
    {
        <img src="~/Content/Images/@item.PageImageSource">
        <img src="~/Content/Images/@item.ContentImageSource">
    }
</div>

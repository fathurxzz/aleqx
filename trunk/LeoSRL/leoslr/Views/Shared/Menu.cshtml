@model IEnumerable<SiteExtensions.MenuItem>

@foreach (var item in Model)
{

    var selected = item.Selected ? "selected" : "";
    
    <div class="item @selected">
        
        @if (item.Current)
        {
            @Html.Raw(item.Title)
        }else if (item.Level == 0)
        {
            @Html.ActionLink(item.Title, "Index", "Home", new { category = item.ContentName }, null)
        }
        else if (item.Level == 1)
        {
            @Html.ActionLink(item.Title, "Index", "Home", new { category = item.Parent.ContentName, subcategory = item.ContentName, artId="" }, null)
        }
        
    </div>
}


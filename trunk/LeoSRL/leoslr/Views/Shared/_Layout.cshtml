@using Leo
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*<link href='http://fonts.googleapis.com/css?family=Lato:100,400' rel='stylesheet' type='text/css'>*@
    <link href='http://fonts.googleapis.com/css?family=Lato:400,300italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,400italic' rel='stylesheet' type='text/css'>
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Fonts.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Common.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/SpecialContent.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/product.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Errors.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Article.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Content.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Content/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.structure.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/tmp.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.bxslider.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Errors.css?v=" + SiteSettings.Version)" rel="stylesheet" type="text/css" />
    
    @RenderSection("Includes",false)

</head>
<body>

    <div id="page">
        @RenderSection("Header",false)
        @RenderSection("Navigation",false)
        @RenderBody()
    </div>

    @RenderSection("Footer",false)
    

    @RenderSection("SpecialContent",false)

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-ui.min.js")
    @Scripts.Render("~/Scripts/jquery.bxslider.min.js")
    @Scripts.Render("~/Content/fancybox/jquery.fancybox-1.3.4.js")
    @Scripts.Render("~/Scripts/leo.js?v=" + SiteSettings.Version)
    @*@Scripts.Render("~/Scripts/data.js")*@
    @Scripts.Render("~/Scripts/init.js?v=" + SiteSettings.Version)
    @RenderSection("scripts", required: false)
</body>
</html>

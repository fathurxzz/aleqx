@model Leo.Models.ProductImage

@{
    ViewBag.Title = "AddImage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddImage</h2>

@using (Html.BeginForm("AddImage", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.Hidden("productId",(int)ViewBag.ProductId)
    <fieldset>
        <legend>ProductImage</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageSource)
        </div>
        <div class="editor-field">
            <input type="file" name="fileUpload" class="photoFileInput" />
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index","Category",new{area="Admin"},null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

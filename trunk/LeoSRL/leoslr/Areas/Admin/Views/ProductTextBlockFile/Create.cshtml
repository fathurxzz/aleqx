@model Leo.Models.ProductTextBlockFile

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-container">

    @using (Html.BeginForm("Create", "ProductTextBlockFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ProductTextBlockId)

        <fieldset>
            <legend>Добавить документ</legend>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.ImageSource)
            </div>
            <div class="editor-field">
                <input type="file" name="image"/>
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.FileName)
            </div>
            <div class="editor-field">
                <input type="file" name="filePdf"/>
            </div>
            

            

            <div class="admin-buttons">
                <input type="submit" value="Сохранить" />
                @Html.ActionLink("Назад", "Index", "Category", new { area = "Admin" }, null)
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

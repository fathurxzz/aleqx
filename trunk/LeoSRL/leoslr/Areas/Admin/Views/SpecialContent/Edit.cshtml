@model Leo.Models.SpecialContent

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@{
    Html.EnableClientValidation();
          }
<div class="admin-container">
    @using (Html.BeginForm("Edit", "SpecialContent", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CurrentLang)
        @Html.HiddenFor(model => model.Id)

        <fieldset>
            <legend>Добавить контент главной страницы</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Text)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Text)
                @Html.ValidationMessageFor(model => model.Text)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.PageImageSource)
            </div>
            <div class="editor-field">
                <input type="file" name="pageImage" class="photoFileInput" />
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.ContentImageSource)
            </div>
            <div class="editor-field">
                <input type="file" name="contentImage" class="photoFileInput" />
            </div>

            <div class="admin-buttons">
                <input type="submit" value="Сохранить" />
                @Html.ActionLink("Назад", "Index", "SpecialContent", new { area = "Admin" }, null)
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

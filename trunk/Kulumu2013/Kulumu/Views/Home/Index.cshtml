@using Kulumu.Models
@model SiteModel 
@section About
{
    @Html.Partial("_About", new AboutModel { Title = Model.Content.DescriptionTitle, Text = Model.Content.Description })
}
@section MainPageGallery
{
    @if (Model.Content.MainPage)
    {
        <div class="mainPageGalleryTitle">
        </div>
        
        <div class="frames">
            @{
        var cnt = 1;
        foreach (var category in Model.MainPageCategories)
        {
            cnt++;
                @Html.Partial("FrameStatic", new CaruselFrame { Id = "bx" + category.Id, Products = category.Products, Title = category.Title, CategoryName = category.Name })

            if (cnt % 2 == 0)
            {
                <div class="separator">
                </div>
            }

        }
            }
            <div class="clear">
            </div>
        </div>
    }
}
<div class="content">
    <div class="title">
        @Html.Partial("_BigTitle", Model.Content.Title)
    </div>
    @if (!Model.IsHomePage)
    {
        <div class="text">
            @Html.Raw(Model.Content.Text)
        </div>

        if (Model.Content.Name.ToLower() == "contacts")
        {
            <div style="text-align: center">
                <h3>Фотма обратной связи</h3>
            </div>
            <div id="sendFeedbackFormContent">
                @Html.Partial("FeedbackForm", new FeedbackFormModel())
            </div>
        }
    }
    else
    {
        <div class="bannerContainer">
            @Html.Partial("Banner", Model.Banners)
        </div>
    }
</div>

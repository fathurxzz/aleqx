@using Kulumu.Models
@model SiteModel 
@section About
{
    @Html.Partial("_About", new AboutModel { Title = Model.Content.DescriptionTitle, Text = Model.Content.Description })
}
@section MainPageGallery
{
    @if (Model.Content.MainPage)
    {
        <div class="mainPageGalleryTitle">
            
        </div>
        
        <div class="frames">
            @{
        var cnt = 1;
        foreach (var category in Model.MainPageCategories)
        {
            cnt++;
                @Html.Partial("Frame", new CaruselFrame { Id = "bx" + category.Id, Products = category.Products, Title = category.Title, CategoryName = category.Name })

            if (cnt % 2 == 0)
            {
                <div class="separator">
                </div>
            }

        }
            }
            <div class="clear">
            </div>
        </div>
    }
}




<div class="content">
    <div class="title">
        @Html.Partial("_BigTitle", Model.Content.Title)
    </div>
    
    @if (!Model.IsHomePage)
    {
        <div class="text">
            @Html.Raw(Model.Content.Text)
        </div>
    }
</div>

@section Includes
{
    <link href="@Url.Content("~/Content/bx_styles/bx_styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.bxSlider.min.js")" type="text/javascript"></script>
}

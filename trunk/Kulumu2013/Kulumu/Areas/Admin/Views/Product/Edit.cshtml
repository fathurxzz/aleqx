@model Kulumu.Models.Product
@{
    ViewBag.Title = "Редактирование изображения";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="adminContentContainer">
    @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(x=>x.Id)
        <table class="adminEditContentTable">
            <tr>
                <td colspan="2">
                    <h2>
                        Редактирование изображения</h2>
                </td>
            </tr>
            <tr>
                <td>Категория</td>
                <td>@Html.DropDownList("categoryId", (List<SelectListItem>)ViewBag.Categories)</td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Title)
                </td>
                <td>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
             <tr>
                <td>
                    @Html.LabelFor(model => model.PageTitle)
                </td>
                <td>
                    @Html.EditorFor(model => model.PageTitle)
                    @Html.ValidationMessageFor(model => model.PageTitle)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Description)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Description, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <td>
                    Добавить изображения
                </td>
                <td>
                     @Html.Partial("InputImages")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Discount)
                </td>
                <td>
                    @Html.EditorFor(model => model.Discount)
                    @Html.ValidationMessageFor(model => model.Discount)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.DiscountText)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.DiscountText, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.DiscountText)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Price)
                </td>
                <td>
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Structure)
                </td>
                <td>
                    @Html.EditorFor(model => model.Structure)
                    @Html.ValidationMessageFor(model => model.Structure)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Consistence)
                </td>
                <td>
                    @Html.EditorFor(model => model.Consistence)
                    @Html.ValidationMessageFor(model => model.Consistence)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Producer)
                </td>
                <td>
                    @Html.EditorFor(model => model.Producer)
                    @Html.ValidationMessageFor(model => model.Producer)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Nap)
                </td>
                <td>
                    @Html.EditorFor(model => model.Nap)
                    @Html.ValidationMessageFor(model => model.Nap)
                </td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
             @if (Model.Category.SpecialCategory)
             {
                 @Html.ActionLink("Назад", "OurWorks", "Home", new {area = ""}, null)
             }
             else
             {
                 @Html.ActionLink("Назад", "Gallery", "Home", new {area = "", id = Model.Category.Name}, null)
             }
        </div>
    }
</div>
@section Includes
{
    <script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}


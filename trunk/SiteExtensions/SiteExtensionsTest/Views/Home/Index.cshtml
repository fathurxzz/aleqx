@using SiteExtensions.Graphics
@using SiteExtensionsTest
@{
    ViewBag.Title = "Home Page";
}

<table>
    <tr>
        @for (int i = 1; i <= 7; i++ )
        {
            string filename = i + ".jpg";
            <td>
                <a rel="@Html.Raw("group1")" href="../../Content/Images/@filename" class="fancyImage">
                    @Html.Raw(Html.CachedImage("~/Content/Images/", filename, SiteSettings.GetThumbnail("thumb"), ScaleMode.Corp))
                </a>
            </td>
        }
    </tr>
</table>
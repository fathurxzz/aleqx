@model Penetron.Models.UserArticle
@{
    ViewBag.Title = "Создание статьи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="adminContent">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <table>
            <tr>
                <td colspan="2">
                    <h3>
                        Создание статьи</h3>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Title)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Text)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Text, new { rows = 12, @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Text)
                </td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Back to List", "Index", "UserArticle", new { area = "Admin" }, null)
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/jquery.validate.min.js", "~/Scripts/jquery.validate.unobtrusive.min.js")
    <script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}

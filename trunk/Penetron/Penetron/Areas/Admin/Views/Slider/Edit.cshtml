@model Penetron.Models.Slider

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="adminContent">

@using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)


        @Html.HiddenFor(model => model.Id)

      <table>
            <tr>
                <td colspan="2">
                    <h3>
                        Добавление баннера</h3>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Url)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Url)
                    @Html.ValidationMessageFor(model => model.Url)
                </td>
            </tr>
            <tr>
                <td>
                    Изображение
                </td>
                <td>
                    <input type="file" id="banner" name="banner" />
                </td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Назад", "Index", "Slider", new { area = "Admin" }, null)
        </div>
}
</div>
@section Scripts
{
    @Scripts.Render("~/Scripts/jquery.validate.min.js", "~/Scripts/jquery.validate.unobtrusive.min.js")
}

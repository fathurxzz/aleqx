    <script>
        $(document).ready(function () {
            $(".more").click(function () {
                sliderouter.goToNextSlide();
            });

            $("html").keydown(function (e) {
                if (e.keyCode === 40) {
                    sliderouter.goToNextSlide();
                } else if (e.keyCode === 38) {
                    sliderouter.goToPrevSlide();
                } else if (e.keyCode === 39) {

                } else if (e.keyCode === 37) {

                }
            });

            var isSliding = false;
            var index = 0;

            var sliderouter = $('.bxsliderouter').bxSlider({
                controls: false,
                pagerSelector:$("#custom-pager"),
                mode: 'vertical',
                pager: true,
                pagerType: 'full',
                infiniteLoop: false,
                onSlideAfter: function ($slideElement, oldIndex, newIndex) {
                    //isSliding = false;
                    index = newIndex;
                    //console.log('onSlideAfter index:' + index);

                    if (index > 0) {
                        $(".scroll-top").css("display", "block");
                    } else {
                        $(".scroll-top").css("display", "none");
                    }

                    setTimeout(function () { isSliding = false; }, 1000);
                }
            });


            $(".scroll-top").click(function () {
                sliderouter.goToSlide(0);
            });



            var slider = $('.bxslider').bxSlider({
                controls: false,
                mode: 'horizontal',
                pager: true,
                pagerType: 'full',
                infiniteLoop: false
            });

            $(document).mousewheel(function (event, delta) {
                console.log('delta: ' + delta + '; isSliding: ' + isSliding + '; index: ' + index);
                if (delta == 1) {
                    if (!isSliding && index > 0) {
                        isSliding = true;
                        sliderouter.goToPrevSlide();
                    }
                }
                else {
                    if (!isSliding && index < 5) {
                        isSliding = true;
                        sliderouter.goToNextSlide();
                    }
                }
            });
        });
    </script>

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Fonts.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-2.0.0.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="main-page-container">
        <div class="header">
            <div class="top">
                <div class="language-switcher">
                    По-русски | <a href="#">In English</a>
                </div>
            </div>
            <div class="middle">
                <div class="layer">
                </div>
            </div>
            <div class="bottom">
            </div>
            <div class="mainMenu">
            </div>
            <div class="bottom2">
            </div>
        </div>
        <div class="content-container">
            <div class="content-center">
                <div class="content-top">
                </div>
                
                <div class="title-container">
                    <table class="title">
                        <tr>
                            <td class="separator"></td>
                            <td class="left"></td>
                            <td class="center">Добро пожаловать!</td>
                            <td class="right"></td>
                            <td class="separator"></td>
                            <td></td>
                        </tr>
                    </table>
                </div>

                <div class="content">
                    @RenderBody()
                </div>
                <div class="line"></div>
                <div class="content-bottom">
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
    </div>
</body>
</html>

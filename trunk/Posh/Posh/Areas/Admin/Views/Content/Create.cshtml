@model Posh.Models.Content
@{
    ViewBag.Title = "Добавление контента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Create</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="editor-table">
        <tr>
            <th colspan="3">
                Контент
            </th>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.Name)
            </td>
            <td class="editor-field">@Html.EditorFor(model => model.Name)
            </td>
            <td>@Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.Title)
            </td>
            <td class="editor-field">@Html.EditorFor(model => model.Title)
            </td>
            <td>@Html.ValidationMessageFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.PageTitle)
            </td>
            <td class="editor-field">@Html.EditorFor(model => model.PageTitle)
            </td>
            <td>@Html.ValidationMessageFor(model => model.PageTitle)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.SortOrder)
            </td>
            <td class="editor-field">@Html.EditorFor(model => model.SortOrder)
            </td>
            <td>@Html.ValidationMessageFor(model => model.SortOrder)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.Text)
            </td>
            <td class="editor-field">
                @Html.TextAreaFor(model => model.Text, new { @class = "ckeditor" })
            </td>
            <td>@Html.ValidationMessageFor(model => model.Text)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.Static)
            </td>
            <td class="editor-field">@Html.EditorFor(model => model.Static)
            </td>
            <td>@Html.ValidationMessageFor(model => model.Static)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.MainPage)
            </td>
            <td class="editor-field">@Html.EditorFor(model => model.MainPage)
            </td>
            <td>@Html.ValidationMessageFor(model => model.MainPage)
            </td>
        </tr>
        <tr>
            <th colspan="3">
                Информация для поисковиков
            </th>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.SeoTitle)
            </td>
            <td class="editor-field">@Html.TextBoxFor(model => model.SeoTitle)
            </td>
            <td>@Html.ValidationMessageFor(model => model.SeoTitle)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.SeoText)
            </td>
            <td class="editor-field">@Html.TextAreaFor(model => model.SeoText)
            </td>
            <td>@Html.ValidationMessageFor(model => model.SeoText)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.SeoDescription)
            </td>
            <td class="editor-field">@Html.TextAreaFor(model => model.SeoDescription)
            </td>
            <td>@Html.ValidationMessageFor(model => model.SeoDescription)
            </td>
        </tr>
        <tr>
            <td class="editor-label">@Html.LabelFor(model => model.SeoKeywords)
            </td>
            <td class="editor-field">@Html.TextAreaFor(model => model.SeoKeywords)
            </td>
            <td>@Html.ValidationMessageFor(model => model.SeoKeywords)
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
}
<div>
    @Html.ActionLink("Назад", "Index", "Home")
</div>
@section Includes
{
    <script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}

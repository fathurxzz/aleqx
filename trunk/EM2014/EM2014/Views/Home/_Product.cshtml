@using SiteExtensions.Graphics
@model EM2014.Models.Product

<div class="product">
    @if (Request.IsAuthenticated)
    {
        <div class="adminLinkContainer">
            @Html.ActionLink("Редактировать", "Edit", "Product", new { area = "Admin", id = Model.Id }, new { @class = "adminLink" })
            @Html.ActionLink("Удалить", "Delete", "Product", new { area = "Admin", id = Model.Id }, new { @class = "adminLink", onclick = "return confirm('Удалить продукт?')" })
        </div>
    }


@*@Html.Raw(@Html.ActionLink("[Image]", "ProductDetails", "Shop", new { Area = "", category = Model.Category.Name, id = Model.Name }, null).ToString().Replace("[Image]", ""))*@
    <div class="image">
        @Html.Raw(@Html.ActionLink("[IMAGE]", "Index", "Home", new { category = Model.Content.Name, product = Model.Name }, null).ToString().Replace("[IMAGE]", Html.OriginalImage("/Content/Images", Model.ImageSource)))
    </div>
    <div class="title">
        @Model.Title
    </div>
    <div class="description">
        @Html.Raw(Model.Text)
    </div>
    @*@Html.Raw(Html.OriginalImage("/Content/Images",Model.PreviewImageSource))*@
</div>

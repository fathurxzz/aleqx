@using EM2014.Settings
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta property="og:title" content="Студия Евгения Миллера" />
    @RenderSection("FacebookMetaTags",false)
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico?v=1.4" type="image/x-icon"> 
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/common.css?v="+SiteSettings.Version)
    @Styles.Render("~/Content/menu.css?v="+SiteSettings.Version)
    @Styles.Render("~/Content/site.css?v="+SiteSettings.Version)
    @Styles.Render("~/Content/product.css?v="+SiteSettings.Version)
    @Styles.Render("~/Content/em.css?v="+SiteSettings.Version)
    @Styles.Render("~/Content/admin.css?v="+SiteSettings.Version)
    @Scripts.Render("~/bundles/modernizr")
    
    @*<link href='http://fonts.googleapis.com/css?family=PT+Sans:400,400italic&subset=cyrillic,latin' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Caption:400,700&subset=cyrillic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700&subset=latin,cyrillic' rel='stylesheet' type='text/css'>*@
    
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic|PT+Sans+Narrow:400,700|PT+Sans+Caption:400,700&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=PT+Serif+Caption:400,400italic&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    
    <script type="text/javascript">

        var isHomePage = @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");

        
    </script>

</head>
<body>
    <div class="contactsLine">
        @if (Request.IsAuthenticated)
        {
            <div style="position: absolute; left: 100px;">
                @Html.ActionLink("Выйти из админки","LogOut","Auth",new{area=""},new{@class="adminLink"})&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="http://brief.eugene-miller.com/customers" class="adminLink">brief</a>
            </div>
        }
        <div class="contacts"><span class="address">Украина, Киев, 04116, ул. Довнар-Запольского, 3</span> <span> <a href="callto:+380676911962">+38 (067) 691-19-62</a></span> <span class="mailto"><a href="mailto:office@eugene-miller.com">office@eugene-miller.com</a></span> <span class="skype"><a href="skype:miller_brand_service?call">miller_brand_service</a></span></div>
    </div>
    <div class="header">

        <div id="logo"></div>
        <div class="slogan">
            <div class="text">
                @*все товары и услуги рождаются равными.
                <br />
                мы способны сделать их уникальными.*@
                брендинг, сайты, мобильные приложения<br/>
                и продвижение в соцсетях
            </div>
        </div>
        @RenderSection("Menu", false)
    </div>
    <div class="page">
        <div class="site-content">
            @RenderBody()
        </div>
    </div>

    <div class="footer">
        Вот уже 5 лет принимаем вопросы по телефону: +38 (067) 691-19-62
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/Scripts/site.js")
    @RenderSection("Scripts", required: false)
</body>
</html>

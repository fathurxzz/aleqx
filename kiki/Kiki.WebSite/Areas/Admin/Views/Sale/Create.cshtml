@model Kiki.DataAccess.Entities.Sale

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "Sale")
}


<div class="container">
    <h3>Добавление новости</h3>
    @using (Html.BeginForm("Create", "Sale", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
   
         <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Title" id="Title" placeholder="Введите заголовок" value="@Model.Title">
            </div>
            @Html.ValidationMessageFor(model => model.Title)
        </div>
         <div class="form-group">
            @Html.LabelFor(model => model.TitleEng, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="TitleEng" id="TitleEng" placeholder="Введите заголовок" value="@Model.TitleEng">
            </div>
            @Html.ValidationMessageFor(model => model.TitleEng)
        </div>
        @*<div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Name" id="Name" placeholder="Введите идентификатор" value="@Model.Name">
                <p class="help-block">Отображается как часть адреса в строке браузера. Должен быть уникальным. Если оставить пустым, то значение будет взято из поля "Заголовок" и транслитерировано в латинские символы.</p>
            </div>
            @Html.ValidationMessageFor(model => model.Name)
        </div>*@
        
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="StartDate" id="StartDate" placeholder="Введите дату" value="@Model.StartDate.ToShortDateString()">
            </div>
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>
         <div class="form-group">
            @Html.LabelFor(model => model.EndDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="EndDate" id="EndDate" placeholder="Введите дату" value="@Model.StartDate.ToShortDateString()">
            </div>
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control" rows="3" name="Description">@Model.Description</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionEng, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control" rows="3" name="DescriptionEng">@Model.DescriptionEng</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Изображения</label>
            <div class="col-sm-10">
                @Html.Partial("InputImages")
            </div>
        </div>
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "Sale", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

     <script>

         $(function () {
             $.datepicker.regional['ru'] = {
                 closeText: 'Закрыть',
                 prevText: '&#x3c;Пред',
                 nextText: 'След&#x3e;',
                 currentText: 'Сегодня',
                 monthNames: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь',
                 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                 monthNamesShort: ['Янв', 'Фев', 'Мар', 'Апр', 'Май', 'Июн',
                 'Июл', 'Авг', 'Сен', 'Окт', 'Ноя', 'Дек'],
                 dayNames: ['воскресенье', 'понедельник', 'вторник', 'среда', 'четверг', 'пятница', 'суббота'],
                 dayNamesShort: ['вск', 'пнд', 'втр', 'срд', 'чтв', 'птн', 'сбт'],
                 dayNamesMin: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'],
                 weekHeader: 'Не',
                 dateFormat: 'dd.mm.yy',
                 firstDay: 1,
                 isRTL: false,
                 showMonthAfterYear: false,
                 yearSuffix: ''
             };
             $.datepicker.setDefaults($.datepicker.regional['ru']);

             $("#StartDate").datepicker({
                 firstDay: 1
             });

             $("#EndDate").datepicker({
                 firstDay: 1
             });
         });
    </script>
}

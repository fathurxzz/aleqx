@model IEnumerable<Metabuild.Models.ContentImage>
@if (Model.Count() > 0)
{
    <div id="gallery">
        @foreach (var item in Model)
        {
            if (Request.IsAuthenticated)
            {
                @Html.ActionLink("Удалить", "DeleteImage", "Content", new {Area = "Admin", id = item.Id}, new {@class = "adminLink"})
                <br />
            }
            
            
        }
    </div>
}

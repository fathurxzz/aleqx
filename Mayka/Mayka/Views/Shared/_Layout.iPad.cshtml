<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width" />*@
    <link rel="shortcut icon" href="/favicon.ico?v=1.2" type="image/x-icon"> 
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/Fonts.css", "~/Content/Common.css", "~/Content/Errors.css", "~/Content/Site-iPad.css","~/Content/jquery.bxslider.css")
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />
    
    <link href='http://fonts.googleapis.com/css?family=Yeseva+One|Tenor+Sans&subset=latin,cyrillic' rel='stylesheet' type='text/css'>

    @RenderSection("Styles", false)
    @if (Request.IsAuthenticated)
    { 
        @Styles.Render("~/Content/Admin.css")
    }
    <script type="text/javascript">
        var isHomePage = @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");
    </script>
</head>
<body>
    <div id="page">
        <div id="header">
            <div id="logo"></div>
            <div id="menu">
                <ul>
                    <li>Каталог Маекджексон</li>
                    <li>Несколько дерзских слов</li>
                    <li>Размерная сетка</li>
                    <li>Шоурум</li>
                </ul>
            </div>
        </div>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    
    @Scripts.Render("~/Scripts/jquery.bxslider.min.js")
    @Scripts.Render("~/Scripts/jquery.inputmask-2.3.51.min.js")
    @Scripts.Render("~/Content/fancybox/jquery.fancybox-1.3.4.js")
    @Scripts.Render("~/Scripts/site.js")

    @*@Scripts.Render("~/bundles/sitescripts")*@

    @RenderSection("scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico?v=1.2" type="image/x-icon">
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    <link href='http://fonts.googleapis.com/css?family=Yeseva+One|Tenor+Sans&subset=latin,cyrillic' rel='stylesheet' type='text/css'>

    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/Fonts.css", "~/Content/Common.css", "~/Content/Errors.css", "~/Content/Site-iPad.css", "~/Content/jquery.bxslider.css")

    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />



    @RenderSection("Styles", false)
    @if (Request.IsAuthenticated)
    { 
        @Styles.Render("~/Content/Admin.css")
    }
    <script type="text/javascript">
        var isHomePage = @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");
    </script>
</head>
<body>
    <div id="page">
        <div id="header">
            <div id="logo"></div>
            @RenderSection("Menu")

        </div>
        <div class="body">
            @RenderBody()
        </div>
        <div id="footer">
            <div id="copyright">
                Сделано с гордостью и примесью легкой эйфории в <a href="http://eugene-miller.com">Студии Евгения Миллера</a>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/Scripts/jquery.bxslider.min.js")
    @Scripts.Render("~/Scripts/jquery.inputmask-2.3.51.min.js")
    @Scripts.Render("~/Content/fancybox/jquery.fancybox-1.3.4.js")
    @Scripts.Render("~/Scripts/site.js?v=0.1")

    @*@Scripts.Render("~/bundles/sitescripts")*@

    @RenderSection("scripts", required: false)
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-53255075-1', 'auto');
        ga('send', 'pageview');

</script>
</body>
</html>

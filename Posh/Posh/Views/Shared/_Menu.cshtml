@model IEnumerable<Posh.Models.MenuItem>


<ul>
    @foreach (var item in Model.OrderBy(m => m.SortOrder))
    {
        string className = item.Selected ? "selected" : "";
           <li class="@className">
            @if (item.Selected)
            {
                <div class="selected">@item.Title</div>
            }
            else
            {
                @Html.ActionLink(item.Title, "Index", "Home", new { Area = "", id = item.Name }, null)
            }
            @Html.ActionLink("редактировать","Edit","Content",new{Area="Admin", id=item.Id},new{@class="adminLink"})
        </li>
    }


    <li>
    @Html.ActionLink("добавить","Create","Content",new{Area="Admin"},new{@class="adminLink"})    
    </li>
</ul>


@using Posh.Models
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    @RenderSection("Includes", false)
</head>
<body>
    <div id="outerHeader">
        <div id="outerHeaderTitle">
            <div class="headerText">
            </div>
        </div>
        <div id="header">
            <div class="headerLine">
                <div class="headerLineLeft">
                </div>
                <div id="mainMenu">
                    @Html.Partial("_Menu", (IEnumerable<MenuItem>)ViewBag.MainMenu ?? new List<MenuItem>())
                </div>
                <div class="headerLineRight">
                </div>
            </div>
        </div>
    </div>
    <div id="main">
        <div class="title">
            @RenderSection("Title", false)
        </div>
        <div class="content">
            @RenderSection("Content", false)
        </div>
        @RenderBody()
        <div class="title seo">
            @RenderSection("SeoTitle", false)
        </div>
        <div class="content seo">
            @RenderSection("SeoContent", false)
        </div>
    </div>
    <div id="footer">
        <div id="footerLeft">
        </div>
        <div id="footerRight">
        </div>
        <div id="innerFooter">
        </div>
    </div>
</body>
</html>

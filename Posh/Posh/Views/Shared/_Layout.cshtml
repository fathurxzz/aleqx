@using Posh.Models
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Menu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PageScripts.js")" type="text/javascript"></script>
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    <script type="text/javascript">
        var isHomePage =  @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");
        BasePageExtender.initialize();
    </script>

    @RenderSection("Includes", false)
</head>
<body>
    <div id="outerHeader">
        <div id="outerHeaderTitle">
            <div class="headerText">
            
            </div>
        </div>
        <div id="header">
        @if (Request.IsAuthenticated)
        {
            @Html.ActionLink("Выйти из системы администрирования", "LogOff", "Account", null, new { @class = "adminLink logOffLink" })
        }
            <div class="headerLine">
                <div class="headerLineLeft">
                    <div id="logo"></div>
                </div>
                <div id="mainMenu">
                    @Html.Partial("_Menu", (IEnumerable<MenuItem>)ViewBag.MainMenu ?? new List<MenuItem>())
                </div>
                <div class="headerLineRight">
                </div>
            </div>
        </div>
    </div>
    <div id="main">
        
            @RenderSection("Title", false)
        
        
            @RenderSection("Content", false)
       
        @RenderBody()
       
            @RenderSection("SeoTitle", false)
        
       
            @RenderSection("SeoContent", false)
        
    </div>
    <div id="footer">
        <div class="sign">
            <div class="subscribe">
                Чтобы быть в курсе новых<br/>
                поставок мебели,<br/>
                <a href="#">подпишитесь на рассылку</a>
            </div>
            <div class="copy">
            &copy; Компания "Posh"<br/>
                Разработка сайта - <a href="http://m-brand.com.ua">Студия Евгения Миллера</a>
                 </div>
            
        </div>
        <div id="footerLeft">
        </div>
        <div id="footerRight">
        </div>
        <div id="innerFooter">
        </div>
    </div>
</body>
</html>

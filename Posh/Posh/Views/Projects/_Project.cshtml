@using Posh.Helpers
@model Posh.Models.Project
<div class="project">
@if(Request.IsAuthenticated)
{
    <div class="abs">
        @Html.ActionLink("Редактировать", "Edit", "Project", new { Area = "Admin", id = Model.Id }, new { @class = "adminLink" })<br/>
        @Html.ActionLink("Удалить", "Delete", "Project", new { Area = "Admin", id = Model.Id }, new { @class = "adminLink", onclick = "return confirm('Удалить проект? (удаляются только пустые проекты)')" })<br/>
    </div>
}

    <div class="project-title">
        @Html.ActionLink(Model.Title, "Index", "Projects", new { id = Model.Name }, null)
    </div>
    @Html.Raw(Html.ActionLink("[IMAGE]", "Index", "Projects", new { id = Model.Name }, null).ToString().Replace("[IMAGE]", Html.CachedImage("~/Content/Images/", Model.ImageSource, "thumbnail1", ScaleMode.Corp)))
</div>

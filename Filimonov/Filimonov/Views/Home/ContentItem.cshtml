@using Filimonov.Models

@model Filimonov.Models.ContentItem
<div class="container">
    <div class="page">
        <div class="menu menuItem">
            <a href="#" class="showLink">@Model.Title</a>
            @if (Roles.IsUserInRole(User.Identity.Name, "Administrators"))
            {
                <div>
                    @Html.ActionLink("Редактировать", "Edit", "Content", new { area = "Admin", id = Model.Id }, new { @class = "adminLink" }) 
                     @if (Model.ContentType != ContentType.Feedback)
                     {
                         @Html.ActionLink("Удалить", "Delete", "Content", new { area = "Admin", id = Model.Id }, new { @class = "adminLink", onclick="return confirm('Удалить проект?')" })
                     }
                </div>
            }
        </div>
    </div>
    <div class="frame">
        <div class="top">
        </div>
        <div class="middle">
            <div class="hide">
                <div class="hideLink">
                </div>
            </div>
            <div class="titleContainer">
                <div class="inner">
                    <div class="titleContainerLeft">
                        <div class="titleContainerRight">
                            <div class="title">
                                @Model.Title
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Raw(Model.Text)
            @if (Model.ContentType == ContentType.Feedback)
            {
                <div id="sendFeedbackFormContent">
                    @Html.Partial("FeedbackForm", new FeedbackFormModel())
                </div>
            }
        </div>
        <div class="bottom">
        </div>
    </div>
</div>
<div class="page">
    <div class="menu" style="height: 50px;">
    </div>
</div>

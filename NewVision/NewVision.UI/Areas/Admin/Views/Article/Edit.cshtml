@using NewVision.UI.Helpers
@model NewVision.UI.Models.Article

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section AdminNavigation
{
    @Html.Partial("Menu", "Article")
}


<div class="container">
    <h3>Редактирование новости</h3>
    @using (Html.BeginForm("Edit", "Article", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model=>model.Id)
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Date" id="Date" placeholder="Введите дату" value="@Model.Date.ToShortDateString()">
            </div>
            @Html.ValidationMessageFor(model => model.Date)
        </div>
          <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Title" id="Title" placeholder="Введите заголовок" value="@Model.Title">
            </div>
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control ckeditor" rows="10" name="Text">@Model.Text</textarea>
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.TitlePosition, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <select class="selectpicker" name="TitlePosition">
                    <option value="0" @(Model.TitlePosition==0?"selected":"")>@SiteContentHelper.TitlePosition[0]</option>
                    <option value="1" @(Model.TitlePosition==1?"selected":"")>@SiteContentHelper.TitlePosition[1]</option>
                </select>
            </div>
            @Html.ValidationMessageFor(model => model.TitlePosition)
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.ImageSrc, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="file" name="file"/>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VideoSrc, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" name="VideoSrc" id="VideoSrc" placeholder="Введите адрес видеоролика" value="@Model.VideoSrc">
            </div>
            @Html.ValidationMessageFor(model => model.VideoSrc)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ArticleImages, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.Partial("InputImages")
            </div>
        </div>
        <div class="form-group">
            @Html.ActionLink("Назад", "Index", "Article", null, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}

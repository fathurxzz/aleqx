@model Shop.Models.ProductImage
@{
    ViewBag.Title = "AddImage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Добавление изображения</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("AddImage", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    
    @Html.Hidden("productId", (int)ViewBag.ProductId)

    <div>
        <input type="file" name="uploadFiles[0]" />
    </div>
    <div>
        <input type="file" name="uploadFiles[1]" />
    </div>
    <div>
        <input type="file" name="uploadFiles[2]" />
    </div>
    <div>
        <input type="file" name="uploadFiles[3]" />
    </div>
    <div>
        <input type="file" name="uploadFiles[4]" />
    </div>
    
    <p>
        <input type="submit" value="Загрузить" />
    </p>
}
<div>
    @Html.ActionLink("Назад к списку", "Images", new { id = (int)ViewBag.ProductId })
</div>

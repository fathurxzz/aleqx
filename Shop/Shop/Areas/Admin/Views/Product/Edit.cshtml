@model Shop.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var brands = (IEnumerable<SelectListItem>)ViewBag.Brands;
}

<h2>Редактирование продукта</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
   

        @Html.HiddenFor(model => model.Id)

 <table class="editor-table">
    <tr>
        <th colspan="3">Продукт</th>
    </tr>
     <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Name)</td>
        <td class="editor-field">@Html.EditorFor(model => model.Name)</td>
        <td>@Html.ValidationMessageFor(model => model.Name)</td>
    </tr>
     <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Title)</td>
        <td class="editor-field">@Html.EditorFor(model => model.Title)</td>
        <td>@Html.ValidationMessageFor(model => model.Title)</td>
    </tr>
    <tr>
        <td class="editor-label">Категория</td>
        <td class="editor-field">@Html.Raw(Model.Category.Name)</td>
        <td></td>
    </tr>
    <tr>
        <td class="editor-label">Бренд</td>
        <td class="editor-field">@Html.DropDownList("brandId", brands)</td>
        <td></td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.ShortDescription)</td>
        <td class="editor-field">@Html.TextAreaFor(model => model.ShortDescription)</td>
        <td>@Html.ValidationMessageFor(model => model.ShortDescription)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Description)</td>
        <td class="editor-field">@Html.TextAreaFor(model => model.Description)</td>
        <td>@Html.ValidationMessageFor(model => model.Description)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.IsNew)</td>
        <td class="editor-field">@Html.EditorFor(model => model.IsNew)</td>
        <td>@Html.ValidationMessageFor(model => model.IsNew)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.IsSpecialOffer)</td>
        <td class="editor-field">@Html.EditorFor(model => model.IsSpecialOffer)</td>
        <td>@Html.ValidationMessageFor(model => model.IsSpecialOffer)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Published)</td>
        <td class="editor-field">@Html.EditorFor(model => model.Published)</td>
        <td> @Html.ValidationMessageFor(model => model.Published)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.SortOrder)</td>
        <td class="editor-field">@Html.EditorFor(model => model.SortOrder)</td>
        <td>@Html.ValidationMessageFor(model => model.SortOrder)</td>
    </tr>
    
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Price)</td>
        <td class="editor-field">@Html.EditorFor(model => model.Price)</td>
        <td>@Html.ValidationMessageFor(model => model.Price)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.OldPrice)</td>
        <td class="editor-field">@Html.EditorFor(model => model.OldPrice)</td>
        <td>@Html.ValidationMessageFor(model => model.OldPrice)</td>
    </tr>
    <tr>
    <th colspan="3">Информация для поисковиков</th>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.SeoDescription)</td>
        <td class="editor-field">@Html.TextAreaFor(model => model.SeoDescription)</td>
        <td>@Html.ValidationMessageFor(model => model.SeoDescription)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.SeoKeywords)</td>
        <td class="editor-field">@Html.TextAreaFor(model => model.SeoKeywords)</td>
        <td>@Html.ValidationMessageFor(model => model.SeoKeywords)</td>
    </tr>
    </table>
        <p>
            <input type="submit" value="Сохранить" />
        </p>
   
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>

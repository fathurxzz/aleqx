@model Shop.Models.ProductAttribute

@{
    ViewBag.Title = "ProductAttributeValues";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Значения атрибута @Model.Name</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@Html.ActionLink("Добавить значение", "AddProductAttributeValue","ProductAttribute",new{id=Model.Id},null)
<br/>
<br/>
<table>
@foreach (var item in Model.ProductAttributeValues)
{
    <tr>
        <td>@item.Value</td>
        <td>@Model.ValueType</td>
        <td>@Html.ActionLink("[удалить]", "DeleteProductAttributeValue", "ProductAttribute", new { id = item.Id, productAttributeId =item.PruductAttributeId},null)</td>
    </tr>
}
</table>
<br/>

<div>
    @Html.ActionLink("Назад к спику атрибутов", "Index")
</div>

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Shop.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="logo">
            </div>
            @Html.Partial("SmallShoppingCart")
            @*header header header *@
        </div>
        <div id="mainMenu">
            @Html.Partial("Menu")
        </div>
        <div id="main">
            <div id="left">
                <div class="itemsContainer">
                    <div class="title">
                    Категории
                    </div>
                    @RenderSection("Categories",false)
                </div>
                <div class="itemsContainer">
                    <div class="title">
                    Бренды
                    </div>
                    @RenderSection("Brands",false)
                </div>


            </div>
            <div id="container">
                
            </div>
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>

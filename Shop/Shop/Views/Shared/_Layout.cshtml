@using Shop.Models
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta itemprop="name" content="Toy-Planet">
    <meta itemprop="description" content="">
    <meta itemprop="image" content="http://toy-planet.com.ua/logo.jpg">
    <meta property="og:title" content="Магазин детских игрушек Toy-Planet" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://toy-planet.com.ua/" />
    <meta property="og:image" content="http://toy-planet.com.ua/logo.jpg" />
    <meta property="og:site_name" content="Toy-Planet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Shop.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Common.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PageScripts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Cart.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcValidation.js")" type="text/javascript"></script>
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    <script type="text/javascript">
        var isHomePage =  @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");
        var showAllBrandList =  @(ViewBag.ShowAllBrandsList != null ? (ViewBag.ShowAllBrandsList).ToString().ToLowerInvariant() : "false");
        BasePageExtender.initialize();
    </script>
    @RenderSection("Includes", false)
    <script type="text/javascript" src="http://vkontakte.ru/js/api/share.js?9" charset="windows-1251"></script>
    <script>        !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");</script>
    <link rel="image_src" href="http://toy-planet.com.ua/logo.jpg" />
</head>
<body>
    <div id="fb-root">
    </div>
    <script>        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/ru_RU/all.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
        } (document, 'script', 'facebook-jssdk'));</script>
    <div class="topLine">
        @if(Request.IsAuthenticated)
        {
            <div class="adminLinkContainer">
            @Html.ActionLink("Администрирование","Index","Home",new{area="Admin",id=""},null)
            </div>
        }
        <div class="topLineInnerContainer">
            <div class="phones">
                <span>(067) 892 62 77</span> <span>(099) 220 77 65</span> <span>(093) 717 27 77</span>
                <div class="time">
                    <span>Прием звонков:&nbsp;&nbsp;Пн-Пт: 09:00 - 19:00 &nbsp;&nbsp;&nbsp;Сб: 10:00 - 17:00</span>
                </div>
            </div>
        </div>
    </div>
    <div class="outerContainerLeft">
        <div class="outerContainerRight">
            <div class="page">
                <div id="header">
                    <div id="logo">
                    </div>
                    @RenderSection("HeaderPicture", false)
                    @*<div id="contacts">
                    <div id="time">
                        <span>Прием звонков:</span> <br/>
                        Пн-Пт: 09-00: 19.00<br/>
                        Сб: 10-00: 17.00    
                    </div>
                    <div id="phone">
                        <span> Заказ и консультация:</span><br/>
                        (093) 717 27 77 – Life<br/>
                        (067) 892 62 77 – Киевстар<br/>
                        (099) 220 77 65 – МТС
                    </div>
                </div>*@
                    @Html.Partial("SmallShoppingCart")
                    @*header header header *@
                </div>
                <div>
                    <div id="menuLine">
                    </div>
                    @Html.Partial("_Search")
                    <div id="mainMenu">
                        @Html.Partial("Menu", (IEnumerable<MenuItem>)ViewBag.MainMenu ?? new List<MenuItem>())
                    </div>
                </div>
                <div id="main">
                    <div id="left">
                        <div class="itemsContainer">
                            <div class="title">
                                <h3>
                                    @Html.ActionLink("Категории", "Categories", "Shop", new { Area = "", id = "" }, null)
                                </h3>
                            </div>
                            @RenderSection("Categories", false)
                        </div>
                        <div class="itemsContainer">
                            <div class="title">
                                <h3>
                                    @Html.ActionLink("Бренды", "Brands", "Shop", new { Area = "", id = "" }, null)
                                </h3>
                            </div>
                            @RenderSection("Brands", false)
                        </div>
                        <div class="itemsContainer">
                            <div class="title">
                                <h3>
                                    @Html.ActionLink("Теги", "Tags", "Shop", new { Area = "", id = "" }, null)
                                </h3>
                            </div>
                            @RenderSection("Tags", false)
                        </div>
                    </div>
                    <div id="container">
                        @RenderBody()
                    </div>
                </div>
                <div class="clear">
                </div>
                @RenderSection("Paging", false)
                <div id="footer">
                    <div class="copy">
                        &copy; Интернет-магазин детских игрушек TOY-PLANET
                    </div>
                    <div class="socials">
                        <div id="likeContainer" class="social fb">
                            <fb:like href="http://toy-planet.com.ua/" send="false" layout="button_count" width="110"
                                show_faces="true">
                    </fb:like>
                        </div>
                        <div class="vk-share social">
                            <script type="text/javascript">
<!--
                                document.write(VK.Share.button({ url: 'http://toy-planet.com.ua/', image: 'http://toy-planet.com.ua/logo.jpg' }, { type: 'button', text: 'Сохранить' }));
                    -->
                            </script>
                        </div>
                        <div class="social twitter">
                            <a class="twitter-share-button" href="http://twitter.com/share" data-url="http://toy-planet.com.ua">
                                Tweet</a>
                        </div>
                        <div id="plusOne" class="social plusone">
                            <!-- Поместите этот тег туда, где должна отображаться кнопка +1. -->
                            <g:plusone size="medium"></g:plusone>
                            <!-- Поместите этот вызов функции отображения в соответствующее место. -->
                            <script type="text/javascript">
                                window.___gcfg = { lang: 'ru' };

                                (function () {
                                    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
                                    po.src = 'https://apis.google.com/js/plusone.js';
                                    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
                                })();
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-32617641-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
</body>
</html>

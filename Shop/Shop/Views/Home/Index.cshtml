@model Shop.Models.SiteViewModel
@{
    
}

@section Categories
{
    @Html.Partial("_Categories",Model.Categories)
}

@section Brands
{
    @Html.Partial("_Brands",Model.Brands)
}

@section Tags
{
    @Html.Partial("_Tags",Model.Tags)
}

@if (Model.Content != null)
{
    @Html.Raw(Model.Content.Text)
}

@section HeaderPicture
{
    @{
        
        string style = "background: url('Content/img/header-bg.gif') no-repeat;" ;
        var isHomePage =  ViewBag.isHomePage != null ? ViewBag.isHomePage.ToString().ToLowerInvariant() : "false";
        if(isHomePage=="false")
        {
            style = "background: url('Content/img/" + Model.Content.Name.ToLower() + ".gif') no-repeat;";
        }
}

    <div id="header-bg-container" style="@Html.Raw(style)">

</div>
}

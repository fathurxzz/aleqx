@model Vip.Models.Project
<div class="filters">
    <div class="filterItem first">
        <div class="filterItemLine">
            <table>
                <tr>
                    <td>@Html.ActionLink("Проекты", "Index", "Projects", new { project = "" }, null)
                        @if (!string.IsNullOrEmpty(Model.Title))
                        {@Html.Raw(" &raquo; ") @Model.Title}
                    </td>
                    <td class="end">
                    </td>
                </tr>
            </table>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.Manager))
    {
        <div class="filterItem manager">
            <div class="filterItemLine">
                <table>
                    <tr>
                        <td>
                            Менеджер:
                            <a href="#">@Model.Manager</a>
                        </td>
                        <td class="end">
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
</div>

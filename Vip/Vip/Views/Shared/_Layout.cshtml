<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Catalogue.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Paging.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Selectors.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Projects.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jcarousel.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.jcarousel.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PageScripts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox.css")" rel="stylesheet" type="text/css" />    
    @if (Request.IsAuthenticated)
    {
        <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    }
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
        <script type="text/javascript">
        var isHomePage =  @(ViewBag.isHomePage != null ? (ViewBag.isHomePage).ToString().ToLowerInvariant() : "false");
        BasePageExtender.initialize();
    </script>

    @RenderSection("Includes", false)
    <script type="text/javascript">
        $(function () {
            $(".fancy").fancybox({ showCloseButton: false, padding: 0, margin: 0 });
            $(".fancyImage").fancybox({ titlePosition: 'outside', showCloseButton: true, cyclic: true, showNavArrows: true, padding: 0, margin: 0, centerOnScroll: true });
        });
    </script>
</head>
    <body>
        @if (Request.IsAuthenticated)
        {
            @Html.Partial("_AdminPanel")
        }
        @Html.Partial("_MainMenu")
        <div class="outerPage">
            <div class="page">
                <div id="logo"></div>
                @RenderBody()
            </div>
            <div class="footer">
                <div class="inner">
                    <div class="copyright">
                        <div style="float: left; width: 300px;">
                            &copy; @DateTime.Now.Year дизайн-студия V.I.P. ROOM
                        </div>
                        <div style="float: right; width: 300px; text-align: right;">
                            Сайт сделан в <a href="http://eugene-miller.com">Студии Евгения Миллера</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </body>
</html>

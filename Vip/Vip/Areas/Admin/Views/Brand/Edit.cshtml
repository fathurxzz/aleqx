@using Vip.Models
@model Vip.Models.Brand
@{
    ViewBag.Title = "Редактирование бренда";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="adminContentContainer">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    
        <table class="adminEditContentTable">
            <tr>
                <td colspan="2">
                    <h2>
                        Редактирование бренда</h2>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Title)
                </td>
                <td>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name)
                </td>
                <td>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Href)
                </td>
                <td>
                    @Html.EditorFor(model => model.Href)
                    @Html.ValidationMessageFor(model => model.Href)
                </td>
            </tr>
            <tr>
                <td>Атрибуты
                </td>
                <td>
                    @{
                        List<CategoryAttribute> attributes = (List<CategoryAttribute>)ViewBag.SelectedAttributes;
                    }

                    @foreach (var item in (List<CategoryAttribute>)ViewBag.CategoryAttributes)
                    {
                        @Html.CheckBox("attr_" + item.Id, attributes.Contains(item)) @item.Title <br />
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.SortOrder)
                </td>
                <td>
                    @Html.EditorFor(model => model.SortOrder)
                    @Html.ValidationMessageFor(model => model.SortOrder)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.DescriptionTitle)
                </td>
                <td>
                    @Html.EditorFor(model => model.DescriptionTitle)
                    @Html.ValidationMessageFor(model => model.DescriptionTitle)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Description)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Description, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Description)
                </td>
            </tr>

        </table>
    
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Назад", "Index", "Catalogue", new { area = "" ,category=Model.Category.Name }, null)
        </div>
    }
</div>
@section Includes
{
    <script type="text/javascript" src="/Controls/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/Controls/ckeditor/adapters/jquery.js"></script>
}
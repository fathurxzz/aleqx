@model IEnumerable<Vip.Models.Brand>

@{
    ViewBag.Title = "Бренды";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="adminContentContainer">
    <table class="adminEditContentTable">
        <tr>
            <td colspan="2">
                <h2>Бренды</h2>
            </td>
        </tr>
        <tr>
            <th>
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model.OrderBy(b=>b.Title)) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { onclick = "return confirm('Вы действительно хотите удалить данный бренд?')" }) 
                </td>
            </tr>
        }
        <tr>
            <td colspan="2">
                <p>
                    @Html.ActionLink("Добавить бренд", "Create")
                </p>
            </td>
        </tr>

    </table>

</div>

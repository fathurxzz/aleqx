@using Vip.Models
@model Vip.Models.Brand
@{
    ViewBag.Title = "Создание бренда";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="adminContentContainer">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        @Html.Hidden("categoryId", (int)ViewBag.CategoryId)
        <table class="adminEditContentTable">
            <tr>
                <td colspan="2">
                    <h2>
                        Создание бренда</h2>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Title)
                </td>
                <td>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name)
                </td>
                <td>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Href)
                </td>
                <td>
                    @Html.EditorFor(model => model.Href)
                    @Html.ValidationMessageFor(model => model.Href)
                </td>
            </tr>
            <tr>
                <td>Атрибуты
                </td>
                <td>
                    @foreach (var item in (List<CategoryAttribute>)ViewBag.CategoryAttributes)
                    {
                        @Html.CheckBox("attr_" + item.Id) @item.Title <br />
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.SortOrder)
                </td>
                <td>
                    @Html.EditorFor(model => model.SortOrder)
                    @Html.ValidationMessageFor(model => model.SortOrder)
                </td>
            </tr>
        </table>
        <div class="buttonsContainer">
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Назад", "Index", "Brand", new { Area = "Admin" }, null)
        </div>
    }
</div>

                        function completeSubscribe() {
                            alert("Ваш email подписан!");
                            $("#subscr").blur();
                        }
                    </script>
                    @using (Ajax.BeginForm("Subscribe", "Home", new AjaxOptions { HttpMethod = "Post", OnComplete = "completeSubscribe" }))

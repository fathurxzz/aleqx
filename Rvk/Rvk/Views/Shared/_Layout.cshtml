<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PageScripts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/fancybox/jquery.fancybox.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    @RenderSection("Includes", false)
    <script type="text/javascript">
        BasePageExtender.initialize();
        $(function () {
            $(".fancy").fancybox({ showCloseButton: true, padding: 0, margin: 0 });
        });
    </script>
</head>
<body>
    <div class="page">
        <div class="content">
            <div id="max">
            </div>
            <div id="banner-top">
                <div id="banner-top01">
                    <div id="banner-top1">
                        <div id="banner-top11">
                            <div id="banner-top2">
                                <div id="banner-top3">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="banner-bottom">
                <div id="firstSign">
                    Будьте в курсе событий:</div>
                <div id="inputContainer">
                    @RenderBody()
                </div>
                <div id="secondSign">
                    Задайте свой вопрос через<br />
                    @Html.ActionLink("форму обратной связи", "FeedbackForm", "Home", null, new { @class = "fancy" }),<br />
                    или по телефону<br />
                    <b><span>(067)</span> 781-10-55</b>
                </div>
            </div>
        </div>
        <div class="copy">
            Сайт создаётся в <a href="http://eugene-miller.com">Студии Евгения Миллера</a></div>
    </div>
</body>
</html>

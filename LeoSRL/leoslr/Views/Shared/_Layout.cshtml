<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Fonts.css", "~/Content/Common.css", "~/Content/Site.css", "~/Content/Errors.css" //, "~/Content/Menu.css"
  
    ,"~/Content/bootstrap.min.css"
            //,"~/Content/jquery.bxslider.css"
    )
    @if (Request.IsAuthenticated)
    { 
        @Styles.Render("~/Content/Admin.css")
    }
</head>
<body>
    
    
    @Html.Partial("LanguageSwitcher")
    @if (Request.IsAuthenticated)
    { 
        <div style="margin-bottom: 20px; margin-top: 20px">
            @Html.ActionLink("Администрирование", "Default", "Admin", new { area = "Admin" }, new{@class="adminLink"})
        </div>
        

        
        @RenderSection("AdminNavigation",false)
    }

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.min.js")

    @RenderSection("scripts", required: false)
</body>
</html>

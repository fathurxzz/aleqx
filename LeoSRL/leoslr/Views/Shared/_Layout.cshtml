<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Fonts.css", "~/Content/Common.css", "~/Content/Site.css", "~/Content/Errors.css"//, "~/Content/Menu.css"
            //,"~/Content/jquery.bxslider.css"
    )
    @Scripts.Render("~/bundles/modernizr")
    @if (Request.IsAuthenticated)
    { 
        @Styles.Render("~/Content/Admin.css")
    }
</head>
<body>

    @Html.Partial("LanguageSwitcher")
    @if (Request.IsAuthenticated)
    { 
        @Html.ActionLink("administration", "Index", "SpecialContent", new { area = "Admin" }, new{@class="adminLink"})
    }

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

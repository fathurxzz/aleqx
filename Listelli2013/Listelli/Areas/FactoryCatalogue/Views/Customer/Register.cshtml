@using Listelli.App_LocalResources
@using Listelli.Models
@model Listelli.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title
{
    @Html.Partial("PageTitle", new ContentTitleModel { Type = TitleType.Text, Title = GlobalRes.FactoryCatalogue})
}

<div class="customerLogOnRegisterForm">
    
    <div class="text">
        В этом разделе представлены только официальные каталоги фабрик. Чтобы их просматривать, необходимо @Html.ActionLink("авторизоваться", "LogOn", "Customer", new { area = "FactoryCatalogue" },null), или пройти простую форму регистрации.
    </div>
    
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table class="">
            <tr>
                <td>
                    @Html.LabelFor(model => model.UserName)
                </td>
                <td>
                    @Html.EditorFor(model => model.UserName)
                    @Html.ValidationMessageFor(model => model.UserName)
                </td>
                <td></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Email)
                </td>
                <td>
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </td>
                <td><span class="tip">@GlobalRes.EmailTip</span></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Password)
                </td>
                <td>
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </td>
                <td><span class="tip">@GlobalRes.PasswordTip</span></td>
            </tr>
            <tr>
                <td></td>
                <td style="padding-top: 50px;">
                    <div class="sbmbtn">
                        <input id="logonbtn" type="submit" onclick="" value="@GlobalRes.Done!" /> &raquo;
                    </div>
                </td>
            </tr>
        </table>
        <script type="text/javascript">
            BasePageExtender.validateFields();
    </script>
    }
</div>
<div class="book">
    
</div>
@section Includes
{
    <link href="@Url.Content("~/Content/FactoryCatalogue.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

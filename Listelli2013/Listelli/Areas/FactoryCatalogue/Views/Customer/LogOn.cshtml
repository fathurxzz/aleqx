@using Listelli.App_LocalResources
@using Listelli.Models
@model Listelli.Models.CustomerLogOnModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title
{
    @Html.Partial("PageTitle", new ContentTitleModel { Type = TitleType.Text, Title = GlobalRes.FactoryCatalogue})
}


<div class="customerLogOnRegisterForm">
    
    <div class="text">
        В этом разделе представлены только официальные каталоги фабрик. Чтобы их просматривать, необходимо авторизоваться, или пройти @Html.ActionLink("простую форму регистрации", "Register", "Customer", new { area = "FactoryCatalogue" }, null).
    </div>


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Email)
                </td>
                <td>
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Password)
                </td>
                <td>
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center">
                    <input type="submit" value="@GlobalRes.Done" />
                </td>
            </tr>
        </table>
        
    }
</div>
<div class="book">
    
</div>
@section Includes
{
   <link href="@Url.Content("~/Content/FactoryCatalogue.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
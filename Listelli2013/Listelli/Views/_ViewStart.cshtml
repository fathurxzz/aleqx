@{
    //if (Request.Cookies["list2013"] == null)
    //{
    //    Response.Redirect("~/soon.htm");
    //}

    if (Request.Cookies["listelli_show_intro"] == null)
    {
        HttpCookie cookie = new HttpCookie("listelli_show_intro", "true");
        cookie.Expires = DateTime.Now.AddDays(1);
        Response.Cookies.Add(cookie);


        var mombileExpression = new System.Text.RegularExpressions.Regex("(iphone)|(android)", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        bool isMobile = mombileExpression.IsMatch(Request.UserAgent);

        if (isMobile)
        {
            Response.Redirect("~/mobile.html");
        }
        else
        {
            Response.Redirect("~/intro.html");
        }
    }

    //Response.Redirect("~/mobile.html");
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
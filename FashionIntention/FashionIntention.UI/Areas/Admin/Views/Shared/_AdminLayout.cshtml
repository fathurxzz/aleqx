@using FashionIntention.UI
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Fashion Intension &mdash; Система администрирования &mdash; @ViewBag.Title</title>
    @Styles.Render("~/Content/css/bootstrap.min.css", "~/Content/css/bootstrap-select.min.css", "~/Content/css/jquery-ui.min.css", "~/Content/css/jquery-ui.structure.min.css", "~/Content/css/Admin.css")
    <script type="text/javascript" src="/scripts/vendor/jquery-1.11.2.min.js?v=@SiteSettings.Version"></script>
    <style>
        div.clip {
            white-space: nowrap; /* Запрещаем перенос строк */
            overflow: hidden; /* Обрезаем все, что не помещается в область */
            text-overflow: ellipsis; /* Добавляем многоточие */
            max-width: 100px;
        }
    </style>
</head>
<body>
    @Html.Partial("LogOut")

    @RenderSection("AdminNavigation", false)


    @if (TempData["errorMessage"] != null)
    {
        <div style="text-align: center">
            <h4><span class="label label-danger">@TempData["errorMessage"]</span>    </h4>
        </div>
    }

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/Scripts/bootstrap.min.js", "~/Scripts/bootstrap-select.js")


    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(function () {
            $('.selectpicker').selectpicker();
        })
    </script>

</body>
</html>

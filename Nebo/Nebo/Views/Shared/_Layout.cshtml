<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    @RenderSection("Includes", false)
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-27343631-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

</script>
</head>
<body>
    <div id="page">
        <div id="leftContent">

        @RenderSection("Banner",false)

        
           
        </div>
        
        <div id="menuContainer">
        @Html.Partial("MainMenu")
        </div>
        <div id="content">
        @if (Request.IsAuthenticated)
{
    @Html.ActionLink("Выйти из системы администрирования","LogOff","Account",new{Area=""},new{@class="adminLink"})
}
            
            @RenderSection("ContentTitle",false)

            
            
            @RenderBody()
        </div>
        <div id="footer">
        <div id="sign">Дизайн сайта<br/> &mdash;<br/> <a href="http://m-brand.com.ua">Евгений Миллер</a>  </div>
        </div>
    </div>
</body>
</html>
